<h1>New blog post</h1>

<%= form_for @post do |f| %>
    <ul class="list-unstyled">
        <div class="form-group">
        <li><h2><%= f.label :title %></h2></li>
        <li><%= f.text_field :title, class: "form-control" %></li>
        </div>
        <div class="form-group">
        <li><%= f.label :body %></li>
        <li><%= f.text_area :body, class: "form-control" %></li>
        </div>
<%= f.submit "Post", class: "btn btn-default" %>
    <ul>
<% end %>